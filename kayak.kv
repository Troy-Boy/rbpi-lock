#:kivy 2.3.0
#:import FadeTransition kivy.uix.screenmanager.FadeTransition
ScreenManager:
	transition: FadeTransition()
	WelcomeScreen:
	LockerNumberScreen:
	ProcessingScreen:
	ResultScreen:

<WelcomeScreen>:
	name: 'welcome'
	BoxLayout:
		orientation: 'vertical'
		padding: 50
		spacing: 20
		Label:
			text: 'Welcome to Kayak Rental'
			font_size: '32sp'
		Button:
			text: 'Start'
			font_size: '28sp'
			size_hint_y: None
			height: '80dp'
			on_press:
				root.manager.current = 'locker_number'

<LockerNumberScreen>:
	name: 'locker_number'
	locker_number: ''
	BoxLayout:
		orientation: 'vertical'
		padding: 20
		spacing: 10
		Label:
			text: 'Enter Locker Number'
			font_size: '28sp'
		TextInput:
			id: locker_input
			text: root.locker_number
			font_size: '28sp'
			size_hint_y: None
			height: '60dp'
			readonly: True
		GridLayout:
			cols: 3
			spacing: [20, 20]  # Increase spacing
			padding: [10, 10]
			size_hint_y: None
			height: '300dp'
			RoundedButton:
				text: '1'
				on_press: root.add_digit(1)
			RoundedButton:
				text: '2'
				on_press: root.add_digit(2)
			RoundedButton:
				text: '3'
				on_press: root.add_digit(3)
			RoundedButton:
				text: '4'
				on_press: root.add_digit(4)
			RoundedButton:
				text: '5'
				on_press: root.add_digit(5)
			RoundedButton:
				text: '6'
				on_press: root.add_digit(6)
			RoundedButton:
				text: '7'
				on_press: root.add_digit(7)
			RoundedButton:
				text: '8'
				on_press: root.add_digit(8)
			RoundedButton:
				text: '9'
				on_press: root.add_digit(9)
			RoundedButton:
				text: 'Clear'
				on_press: root.clear_input()
			RoundedButton:
				text: '0'
				on_press: root.add_digit(0)
			RoundedButton:
				text: 'Next'
				on_press: root.proceed_to_code()
		Label:
			id: error_message
			text: ''
			color: (1, 0, 0, 1)
			font_size: '18sp'

<CodeEntryScreen>:
	name: 'code_entry'
	code: ''
	locker_number: ''
	boat_id: ''
	api: None
	utc_time: ''
	debug_logs: ''
	BoxLayout:
		orientation: 'vertical'
		spacing: 0
		padding: 0
		canvas.before:
			Color:
				rgba: 1, 0.5, 0, 1  # Orange background
			Rectangle:
				pos: self.pos
				size: self.size
		RelativeLayout:
			size_hint: 1, None
			height: '200dp'
			Label:
				id: banner_label
				text: root.get_banner_text()
				markup: True
				font_size: '16sp'
				color: 1, 1, 1, 1
				size_hint: 1, 1
				pos_hint: {'center_x': 0.5, 'center_y': 0.5}
				text_size: self.width - 20, None
				halign: 'left'
				valign: 'middle'

		# Rest of your layout
		Label:
			text: 'Enter Reservation Code'
			font_size: '28sp'
			size_hint_y: None
			height: '60dp'

		TextInput:
			id: code_input
			text: root.code
			font_size: '28sp'
			size_hint_y: None
			height: '60dp'
			readonly: True

		GridLayout:
			cols: 3
			spacing: [20, 20]  # Increase spacing
			padding: [10, 10]
			size_hint_y: None
			height: '300dp'
			RoundedButton:
				text: '1'
				on_press: root.add_digit(1)
			RoundedButton:
				text: '2'
				on_press: root.add_digit(2)
			RoundedButton:
				text: '3'
				on_press: root.add_digit(3)
			RoundedButton:
				text: '4'
				on_press: root.add_digit(4)
			RoundedButton:
				text: '5'
				on_press: root.add_digit(5)
			RoundedButton:
				text: '6'
				on_press: root.add_digit(6)
			RoundedButton:
				text: '7'
				on_press: root.add_digit(7)
			RoundedButton:
				text: '8'
				on_press: root.add_digit(8)
			RoundedButton:
				text: '9'
				on_press: root.add_digit(9)
			RoundedButton:
				text: 'Clear'
				on_press: root.clear_input()
			RoundedButton:
				text: '0'
				on_press: root.add_digit(0)
			RoundedButton:
				text: 'Submit'
				on_press: root.validate_code()
		Label:
			id: error_message
			text: ''
			color: (1, 0, 0, 1)
			font_size: '18sp'
		Button:
			text: 'Back'
			size_hint_y: None
			height: '60dp'
			on_press:
				root.manager.current = 'locker_number'

<ProcessingScreen>:
	name: 'processing'
	BoxLayout:
		orientation: 'vertical'
		Label:
			text: 'Processing...'
			font_size: '28sp'
		ProgressBar:
			max: 1
			value: 0.5  # Placeholder for animation

<ResultScreen>:
	name: "result"
	BoxLayout:
		orientation: "vertical"
		padding: 50
		spacing: 20

		Label:
			id: result_label  # Dynamic success/error message
			text: "Processing..."
			font_size: "28sp"
			halign: "center"
			valign: "middle"
			text_size: self.width, None  # Ensures text wraps properly

		Button:
			id: retry_button
			text: "Retry"
			font_size: "24sp"
			size_hint_y: None
			height: "60dp"
			on_press: root.reset()  # Go back to locker number screen and clear code
			opacity: 0  # Initially hidden
			disabled: True

		Button:
			text: "Finish"
			font_size: "24sp"
			size_hint_y: None
			height: "60dp"
			on_press: root.manager.current = "welcome"  # Go back to home screen


<RoundedButton@Button>:
    size_hint: None, None
    size: 80, 80
    font_size: "28sp"
    background_normal: ""
    background_down: ""
    canvas.before:
        Color:
            rgba: 1, 0.5, 0, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [40,]